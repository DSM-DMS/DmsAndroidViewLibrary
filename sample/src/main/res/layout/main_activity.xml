<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorNightWhite">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.dsm.dms.dmsviewlibrary.calendar.big.DmsBigCalendarView
            android:id="@+id/big_calendar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/big_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorNightBlack"/>

        <com.dsm.dms.dmsviewlibrary.calendar.small.DmsSmallCalendarView
            android:id="@+id/small_calendar"
            android:layout_width="370dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/small_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.dsm.dms.dmsviewlibrary.button.material.DmsProgressMaterialButton
            android:id="@+id/button"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:padding="16dp"
            android:text="버튼"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

        <com.dsm.dms.dmsviewlibrary.switch.DmsSettingSwitch
            android:id="@+id/dms_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.dsm.dms.dmsviewlibrary.switch.DmsSettingSwitch
            android:id="@+id/dms_switch2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</ScrollView>
